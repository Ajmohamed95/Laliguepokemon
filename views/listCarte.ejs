  <section class="listecarte">
    <div class="wrapper3 fadeInDown">

      <div id="formContent3">

        <div class="fadeIn first" style="padding-bottom: 20px;">
            <h2 class="title">Liste des cartes Pokémons</h2>
        </div>

        <table class="table">
          <thead>
            <tr>
                <th>Nom</th>
                <th>Puissance</th>
                <th>Attaque</th>
                <th>Brillant</th>
                <th>Rare</th>
                <th>Pokémon Attaché</th>
                <th>Modifier</th>
                <th>Supprimer</th>
            </tr>
          </thead>

            <tbody>
            <% for( let i = 0; i <listCarte.length; i++ ) {
                %>
            <Form action="/listCarte/<%= listCarte[i].idcarte  %>" method="GET">
            <tr>
              <th><input type="text" name="cartenom" value="<%= listCarte[i].nomcarte %>"></th>
              <th><input type="number" min="1" max="100" name="puissance" value="<%= listCarte[i].puissance %>"></th>
              <th><input type="text" name="attaque" value="<%= listCarte[i].attaque %>"></th>
              <th><select name="isBrillant" id="Brillant">
            <%  
                if(listCarte[i].IsBrillant == 1 ){ %>
                    <option selected="selected" value="1">oui</option>
                    <option value="0">non</option>
               <% }  
                else
                { %>
                    <option value="1">oui</option>
                    <option selected="selected" value="0">non</option>
              <%  } 
                %>
              </select></th>
              <th><select name="isRare" id="Rare">
                <%  
                    if(listCarte[i].IsRare == 1){ %>
                        <option selected="selected" value="1">oui</option>
                        <option value="0">non</option>
                   <% }  
                    else
                    { %>
                        <option value="1">oui</option>
                        <option selected="selected" value="0">non</option>
                  <%  } 
                    %>
                  </select></th>
              <th>
                  <select name="pokemonattache" id="pokemon">
                <% 
                for( let j = 0; j <pokemons.length; j++ ) { 
                    if(listCarte[i].idpokemon == pokemons[j].idpokemon) {  %>
                    <option selected="selected" value="<%= pokemons[j].idpokemon %> "> <%= pokemons[j].nom %> </option>
                <%  } else { %>
                    <option value="<%= pokemons[j].idpokemon %> "> <%= pokemons[j].nom %> </option>
                <%  } } %>
                 </select>
              </th>
              <th><button class="btn btn-primary" id="btn-update" name="update" value="update">update</button></th>
              <th><button class="btn btn-primary" id="btn-delete" name="delete" value="delete">delete</button></th>
              <th><input type="hidden" name="idpokemon" value="<%= listCarte[i].idpokemon %>"></th>
            </tr>
            </Form>
              <%  } %>
            </tbody>
          </table>

          <div id="formFooter" style="padding: 15px;">
            <a href="/collectionCarte">Créer une carte</a>
            <a href="/logout" style="float: right; color: #e63946; font-weight: bold;">Déconnexion</a>
          </div>

      </div>

    </div>
  </section> 
    

